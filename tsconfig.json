{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"rootDir": ".",
		"target": "es5",
		"lib": ["es6", "es5", "dom"],
		"typeRoots": [
			"./node_modules/@types",
			"./@types"
		],
		"types": [
			"jasmine",
			"node"
		]
	},
	"exclude": [
		"dist/**/*",
		"node_modules/**/*",
		"tmp/**/*",
		"@types/**/*"
	]
}